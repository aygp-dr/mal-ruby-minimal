;; Factorial example in MAL
;; Shows recursion and function definition

(def! factorial 
  (fn* (n) 
    (if (= n 0) 
      1 
      (* n (factorial (- n 1))))))

(factorial 5)
;; Expected: 120

(def! fact-iter
  (fn* (n acc)
    (if (= n 0)
      acc
      (fact-iter (- n 1) (* n acc)))))

(def! factorial-iterative
  (fn* (n)
    (fact-iter n 1)))

(factorial-iterative 5)
;; Expected: 120